
@{
    ViewBag.Title = "ForgetPassword";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Scripts/sweetalert2.min.css">
</head>
<body>
    <div class="container-fluid text-center bg-primary">
        <div class="row d-flex align-items-center justify-content-center" style="height: 100vh;">
            <div class="col-8 col-md-5 col-lg-3  p-5 bg-white h-40 rounded">
                <div>
                    <h2 class="mt-4">Forgot Your Password</h2>
                    <h6 class="my-3">Enter the email address associated with your account.</h6>

                    <div class="mt-5 mx-auto text-end">
                        <form action="">
                            <input type="email" class="form-control p-2" id="email" placeholder="E-mail">
                            <a onclick="reset()" class="btn btn-primary btn-md my-4 me-0" >Submit</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="~/Scripts/sweetalert2.min.js"></script>
    <script>

        var reset = function () {
            debugger


            var email = $("#email").val();
           
            if (email != "" ) {
                $.ajax({
                    url: "/Auth/ResetPassword",
                    type: "post",
                    data: { Email: email },
                    success: function (res) {

                        if (res == "true") {

                            swal({
                                title: "success", text: "Temp Password Sent to your Phone", type: "success"
                            }).then(function () {
                                location.reload();
                            });
                        }

                        else {
                            swal('error!', res, 'error');
                        }
                    }

                });
            }
            else {
                swal('error!', "Please fill all fields !", 'error');
            }


        }






    </script>
</body>
</html>


